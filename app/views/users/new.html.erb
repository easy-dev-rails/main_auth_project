<h1>Регистрация</h1>

<div>
  <div>
    <%= render 'shared/error_messages' %>
  </div>
  <div>
    <%= form_for(@user) do |f| %>
        <div>
        <%= f.label :name, 'Имя' %>
        <%= f.text_field :name %>
        </div>

        <div>
          <%= f.label :email, 'E-mail' %>
          <%= f.text_field :email %>
        </div>

        <div>
          <%= f.label :password, 'Пароль' %>
          <%= f.password_field :password %>
        </div>

        <div>
          <%= f.label :password_confirmation, 'Подтвердите пароль' %>
          <%= f.password_field :password_confirmation %>
        </div>

        <div>
          <%= f.submit 'Создать аккаунт' %>
        </div>
    <% end %>
  </div>
</div>
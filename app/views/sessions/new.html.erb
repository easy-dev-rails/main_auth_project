<h1>Вход</h1>

<div>
  <div>
    <%= form_for(:session, url: sessions_path) do |f| %>
        <div>
          <%= f.label :email, 'E-mail' %>
          <%= f.text_field :email %>
        </div>

        <div>
          <%= f.label :password, 'Пароль' %>
          <%= f.password_field :password %>
        </div>

        <div>
          <%= f.submit "Вход" %>
        </div>
    <% end %>
    <p>Новый пользователь? <%= link_to 'Зарегистрироваться', signup_path %></p>
  </div>
</div>
